@{
    ViewBag.Title = "FlightRecordForm";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>FlightRecordForm</h1>

<link href="~/Content/dropzone.min.css" rel="stylesheet" />
<script src="~/Scripts/dropzone.min.js"></script>

<div class="row">
    <div class="col-md-6">
        @using (Html.BeginForm("Upload", "FlightRecords", FormMethod.Post, new { @enctype = "multipart/form-data" }))
        {
            <div class="form-group">
                <input type="file" accept=".csv" name="file" id="file" required />
            </div>
            <div class="form-group">
                <input type="submit" />
            </div>
        }
    </div>

    <div id="mydrop" class="col-md-6">
        <form action="DragAndDrop" class="dropzone" id="dropzoneform" style="background-color:#E3FCFF;border:dashed">
            <div>
                <button class="form-control btn btn-info" type="submit" style="position:absolute;left:5%;right:5%;bottom:2%;top:75%; width:90%;">Save</button>
            </div>
        </form>
       
    </div>
</div>
