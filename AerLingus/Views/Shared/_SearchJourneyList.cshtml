@model AerLingus.View_Models.SearchJourneyViewModel
<div id="searchResults" class="col-md-6">
    @if (ViewBag.A)
    {
        if (!Model.Journeys.Any())
        {
            <h2>No record matches search criteria.</h2>
        }
        else
        {
            <div class="lista">
                @foreach (var journey in Model.Journeys)
                {
                    <p class="hl">@journey.IdentifierNo | @journey.FirstName | @journey.LastName | @journey.TicketNo</p>
                    <div class="row">
                        <div class="col-md-1" id="EditDugme">
                            @Html.ActionLink("Edit", "Edit", "Journey", new { id = journey.ID }, new { @class = "btn btn-success" })
                        </div>
                        <div class="col-md-1">
                            @Html.ActionLink("Details", "Details", "Journey", new { id = journey.ID }, new { @class = "btn btn-success" })
                        </div>
                        <div class="col-md-1">
                            @Html.ActionLink("Delete", "Delete", "Journey", new { id = journey.ID }, new { @class = "btn btn-success" })
                        </div>
                        <div class="col-md-1">
                            @Html.ActionLink("Segments", "JourneySegmentDetails", "Journey", new { id = journey.ID }, new { @class = "btn btn-success" })
                        </div>
                        <div class="col-md-1">
                            <button onclick="location.href='@Url.Action("JourneySegmentForm", "JourneySegments")'" class="btn btn-success">Add new Segment</button>
                        </div>
                    </div>
                }
            </div>
        }
    }
</div>
