@model AerLingus.View_Models.SearchJourneyViewModel
@{
    ViewBag.Title = "SearchJourney";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row">
    <h2>Search Journey</h2>
    <div class="col-md-5">
        @using (Html.BeginForm("GetSearchedJourneys", "Journey", FormMethod.Get))
        {
            <h4>@Html.ValidationSummary(false, "", new { @class = "text-danger" })</h4>

            <div class="form-group">
                @Html.LabelFor(j => j.SearchJourney.otherFFPNo)
                @Html.TextBoxFor(j => j.SearchJourney.otherFFPNo, new { @class = "form-control" })
            </div>

            <div class="form-group">
                @Html.LabelFor(j => j.SearchJourney.firstName)
                @Html.TextBoxFor(j => j.SearchJourney.firstName, new { @class = "form-control" })
            </div>

            <div class="form-group">
                @Html.LabelFor(j => j.SearchJourney.lastName)
                @Html.TextBoxFor(j => j.SearchJourney.lastName, new { @class = "form-control" })
            </div>

            <div class="form-group">
                @Html.LabelFor(j => j.SearchJourney.ticketNo)
                @Html.TextBoxFor(j => j.SearchJourney.ticketNo, new { @class = "form-control" })
            </div>

            <button type="submit" class="btn btn-success">Search</button>
        }
    </div>
    <div class="col-md-6">
        @if (ViewBag.A)
        {
            if (!Model.Journeys.Any())
            {
                <h2>No record matches search criteria.</h2>
            }
            else
            {
                <div class="lista">
                    @foreach (var journey in Model.Journeys)
                    {
                        <p class="h1">@journey.IdentifierNo | @journey.FirstName | @journey.LastName | @journey.TicketNo</p>
                        <div class="row">
                            <div class="col-md-1" id="EditDugme">
                                @Html.ActionLink("Edit", "Edit", "Journey", new { id = journey.ID }, new { @class = "btn btn-success" })
                            </div>
                            <div class="col-md-1">
                                @Html.ActionLink("Details", "Details", "Journey", new { id = journey.ID }, new { @class = "btn btn-success" })
                            </div>
                            <div class="col-md-1">
                                @Html.ActionLink("Delete", "Delete", "Journey", new { id = journey.ID }, new { @class = "btn btn-success" })
                            </div>
                        </div>
                    }
                </div>
            }
        }
    </div>
</div>

